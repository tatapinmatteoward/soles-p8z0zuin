---
// Frontmatter
const navItems = [
  { href: '/', label: 'Home' },
  { href: '/collection-diaries', label: 'Collection Diaries' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
  { href: '/blog', label: 'Blog' }
];
---

<nav class="bg-[#0a0a0a] text-[#f5f5f5] shadow-lg">
  <div class="container mx-auto px-4 py-4">
    <div class="flex justify-between items-center">
      <a href="/" class="text-2xl font-bold tracking-wider">Sole Sanctum</a>
      
      <!-- Desktop Menu -->
      <div class="hidden md:flex gap-8">
        {navItems.map((item) => (
          <a 
            href={item.href} 
            class="hover:text-[#6b1c2d] transition-colors duration-300"
          >
            {item.label}
          </a>
        ))}
      </div>
      
      <!-- Mobile Menu Button -->
      <button id="mobile-menu-button" class="md:hidden text-xl">
        <i class="fas fa-bars"></i>
      </button>
    </div>
    
    <!-- Mobile Menu (hidden by default) -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 flex flex-col gap-4 pb-4">
      {navItems.map((item) => (
        <a 
          href={item.href} 
          class="hover:text-[#6b1c2d] transition-colors duration-300 py-2 border-b border-[#333]"
        >
          {item.label}
        </a>
      ))}
    </div>
  </div>
</nav>

<!-- Client-side JavaScript for mobile toggle -->
<script>
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');
  
  if (button && menu) {
    button.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
  }
</script>

<style>
  @import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css');
</style>